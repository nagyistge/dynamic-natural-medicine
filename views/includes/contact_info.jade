
.contact-info
  section
    .name
      span Dynamic Natural Medicine - Dr. Jennifer S Read.
  section
    .email
      span: a(href="mailto:" + info.email)
        //span: a(href="mailto:&#" + new Buffer(info.email, 'ascii').toJSON().join(";&#") + ";")
        | <meta itemprop="email" content="info@dynamicnaturalmedicine.com">
        = info.email
  section
    .phone
      span
        a(href="tel:" + info.phone)
          span(itemprop="telephone")= info.phoneFormatted
  section
    .address(itemprop="address", itemscope, itemtype="http://schema.org/PostalAddress")
      span
        a(href="//maps.google.com/maps?saddr=&daddr=" + encodeURIComponent(info.address.oneline), target="_blank")
          span(itemprop="streetAddress") #{info.address.line1} | #{info.address.line2}
          br
          span(itemprop="addressLocality") #{info.address.city}
          | ,&nbsp;
          span(itemprop="addressRegion") #{info.address.state}
          | ,&nbsp;
          span(itemprop="postalCode") #{info.address.zip}
  section
    .address-message
      span We will be opening another location on the Eastside, stay tuned.

