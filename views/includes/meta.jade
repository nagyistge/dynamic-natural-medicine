// https://developers.facebook.com/docs/opengraph/#types
// https://developers.facebook.com/docs/reference/opengraph/object-type/business.business/
meta(name="fb:app_id", content=meta.facebook.app_id)
meta(name="og:type", content=meta.facebook.type)
// NOTE: if have multiple pages title of page will change
meta(name="og:title", content=meta.facebook.title || meta.title)
meta(name="og:description", content=meta.facebook.description || meta.description)
meta(name="og:site_name", content=meta.facebook.site_name || meta.title)
meta(name="og:image", content=meta.facebook.image || meta.image)
meta(name="og:see_also", content="")

meta(property='business:contact_data:street_address', content=info.address.line1 + " " + info.address.line2)
meta(property='business:contact_data:locality', content=info.address.city + ", " + info.address.state)
meta(property='business:contact_data:postal_code', content=info.address.zip || meta.facebook.postal_code)
meta(property='business:contact_data:country_name', content=meta.facebook.country_name)
//meta(property='place:location:latitude', content='Sample Location: Latitude')
//meta(property='place:location:longitude', content='Sample Location: Longitude')



// https://dev.twitter.com/docs/cards
meta(name="twitter:card", content="summary")
meta(name="twitter:title", content=title)
meta(name="twitter:description", content=description)
meta(name="twitter:image", content=photoUrl)

// Google here and in body
// http://www.google.com/webmasters/tools/richsnippets
// http://linter.structured-data.org
meta(itemprop="image", content=photoUrl)
meta(itemprop="description", content=description)
meta(itemprop="name" content=fullName)
