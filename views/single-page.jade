append scripts
  script(src='bower_components/jquery/dist/jquery.min.js')
  script(src='bower_components/jquery-validation/dist/jquery.validate.min.js')
  //script(src='bower_components/jquery-ui/ui/minified/jquery.ui.effect.min.js');
